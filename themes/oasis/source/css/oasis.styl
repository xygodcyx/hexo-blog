fonts = Inter var, system-ui, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica Neue, Arial, Noto Sans, sans-serif, Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol, Noto Color Emoji;
color-accent = #394867;
color-primary = #1a202c;

body {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center; /* For horizontal alignment */
  padding-top: 5em;
  padding-bottom: 8em;
  font-family: "Microsoft YaHei", "PingFang SC", "Noto Sans SC", Arial, Helvetica, sans-serif;
  color: color-primary;
}

div#content {
  // display: flex;
  // flex-direction: column
  // justify-content: flex-start
  // align-items: flex-start
  width: 40em;
  max-width: 90%;
}

h1#title {
  margin-bottom: 0;
}

div#menu-outer {
  margin-top: 0.5em;
}

nav#menu-inner {
  a, span {
    margin-right: 1em;
    font-weight: 520;
  }

  span {
    color: color-primary;
    text-decoration: none;
  }

  a {
    color: color-accent;
    text-decoration: underline;
  }
}

div#content-outer {
  margin-top: 2em;

  div#content-inner {
    div#paginator {
      margin-top: 4em;

      a {
        color: color-accent;
        margin-right: 1em;
      }

      span {
        color: color-accent;
        margin-right: 1em;
      }
    }
  }
}

div.post-item {
  width: 100%;
  margin-bottom: 1em;

  .post-item-title {
    width: 100%;
    display: flex;
    justify-content: space-between;
    margin-top: 0;
    margin-bottom: 0.5em;

    span.reprint {
      font-size: 0.8em;
      // font-style: italic;
      line-height: 1.5;
    }

    a {
      flex: 1;
      color: #19202b;
      font-size: 1.2em;
      font-weight: 500;
      text-decoration: none;

      &[target='_blank'] {
        position: relative;

        &::after {
          content: '↗';
          font-size: 12px;
          position: absolute;
        }

        color: blue;
      }
    }
  }
}

time {
  color: #b9bfcc;
}

div#bottom-inner {
  margin-top: 8em;

  hr {
    background: #CCCCCC;
    height: 1px;
    border: none;
  }

  div {
    display: flex;
    height: 2em;
    justify-content: space-between;
    align-items: center;

    a {
      color: #19202b;
    }

    #hexo {
      float: right;
    }

    img {
      width: 1em;
      height: 1em;
      margin-left: 1em;
      margin-top: 3px;
    }
  }
}

img {
  max-width: 100%;
}

aside {
  a {
    color: color-accent;
  }

  li {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }
}

@media (max-width: 768px) {
  body {
    padding-top: 2em;
    padding-bottom: 4em;
  }

  div#content {
    width: 95%;
    max-width: 95%;
  }

  h1#title {
    font-size: 1.8em;
  }

  div#menu-outer {
    margin-top: 0.3em;
  }

  nav#menu-inner {
    a, span {
      margin-right: 0.5em;
      font-size: 1em;
    }
  }

  div#content-outer {
    margin-top: 1.5em;

    div#content-inner {
      div#paginator {
        margin-top: 2em;

        a, span {
          margin-right: 0.5em;
          font-size: 1em;
        }
      }
    }
  }

  div.post-item {
    margin-bottom: 0.8em;

    .post-item-title {
      margin-bottom: 0.3em;

      a {
        font-size: 1.1em;

        &[target='_blank'] {
          position: relative;

          &::after {
            content: '↗';
            font-size: 12px;
            position: absolute;
          }

          color: blue;
        }
      }
    }
  }

  div#bottom-inner {
    margin-top: 4em;

    div {
      height: 1.5em;
      font-size: 1em;
    }
  }
}

@media (max-width: 480px) {
  body {
    padding-top: 1.5em;
    padding-bottom: 3em;
  }

  div#content {
    width: 98%;
    max-width: 98%;
  }

  h1#title {
    font-size: 1.5em;
  }

  nav#menu-inner {
    a, span {
      margin-right: 0.3em;
      font-size: 0.85em;
    }
  }

  div#content-outer {
    margin-top: 1em;
  }

  div.post-item {
    .post-item-title {
      a {
        font-size: 1em;

        &[target='_blank'] {
          position: relative;

          &::after {
            content: '↗';
            font-size: 12px;
            position: absolute;
          }

          color: blue;
        }
      }
    }
  }

  div#bottom-inner {
    margin-top: 3em;

    div {
      height: 1.2em;
      font-size: 0.8em;
    }
  }
}

@import '_post';
@import '_highlight/index';
@import '_copy';
@import '_anchor-sidebar';
